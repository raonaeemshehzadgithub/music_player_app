<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_7">

    <androidx.cardview.widget.CardView
        android:id="@+id/thumbnail_card"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="@dimen/margin_10"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/song_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@color/pink"
            android:src="@drawable/ic_music" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/song_name"
        style="@style/PlaylistNameText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_20"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/song_name"
        app:layout_constraintBottom_toTopOf="@+id/artist_name"
        app:layout_constraintEnd_toStartOf="@+id/un_favourite"
        app:layout_constraintStart_toEndOf="@+id/thumbnail_card"
        app:layout_constraintTop_toTopOf="@id/thumbnail_card" />

    <TextView
        android:id="@+id/artist_name"
        style="@style/ImagesCountText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_20"
        android:text="@string/artist_name"
        app:layout_constraintBottom_toBottomOf="@id/thumbnail_card"
        app:layout_constraintEnd_toStartOf="@+id/un_favourite"
        app:layout_constraintStart_toEndOf="@id/thumbnail_card"
        app:layout_constraintTop_toBottomOf="@+id/song_name" />

    <ImageView
        android:id="@+id/un_favourite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_10"
        android:src="@drawable/ic_unfavourite"
        app:layout_constraintBottom_toBottomOf="@id/thumbnail_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/song_name"
        app:layout_constraintTop_toTopOf="@id/thumbnail_card" />
</androidx.constraintlayout.widget.ConstraintLayout>